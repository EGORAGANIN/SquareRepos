<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    android:layout_margin="16dp">

    <ImageView
        android:id="@+id/iv_avatar_committer"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/tv_name_committer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:layout_toEndOf="@+id/iv_avatar_committer"
        android:layout_below="@+id/tv_date_commit"
        android:textColor="@android:color/black"
        android:textSize="22sp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        tools:text="Name" />

    <TextView
        android:id="@+id/tv_text_commit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_avatar_committer"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        tools:text="Text" />

    <TextView
        android:id="@+id/tv_date_commit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/iv_avatar_committer"
        android:textColor="@android:color/darker_gray"
        android:textSize="14sp"
        android:layout_marginStart="8dp"
        tools:text="YYYY-mm-dd" />
</RelativeLayout>